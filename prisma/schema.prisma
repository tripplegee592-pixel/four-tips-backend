datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  TIPSTER
  ADMIN
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELLED
  EXPIRED
}

enum SubscriptionPlan {
  FREE
  PREMIUM
}

enum Sport {
  FOOTBALL
  BASKETBALL
  TENNIS
  CRICKET
  RUGBY
  BASEBALL
  HOCKEY
  ESPORTS
  OTHER
}

model User {
  id             String           @id @default(uuid())
  email          String           @unique
  password       String
  firstName      String?
  lastName       String?
  role           Role             @default(USER)
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  
  // Relations
  tips           Tip[]            @relation("TipsterTips")
  subscriptions  Subscription[]   @relation("SubscriberSubscriptions")
  subscribedTo   Subscription[]   @relation("TipsterSubscriptions")
  reviews        Review[]
}

model Tip {
  id          String   @id @default(uuid())
  title       String
  description String
  sport       Sport
  matchDate   DateTime
  odds        Float
  prediction  String
  isPremium   Boolean  @default(false)
  status      String   @default("PENDING") // PENDING, ACTIVE, CLOSED, WON, LOST
  tipsterId   String
  tipster     User     @relation("TipsterTips", fields: [tipsterId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  reviews     Review[]
  
  @@index([tipsterId])
}

model Subscription {
  id          String               @id @default(uuid())
  userId      String
  tipsterId   String
  plan        SubscriptionPlan     @default(FREE)
  status      SubscriptionStatus   @default(ACTIVE)
  startDate   DateTime             @default(now())
  endDate     DateTime?
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  
  // Relations
  subscriber  User                 @relation("SubscriberSubscriptions", fields: [userId], references: [id], onDelete: Cascade)
  tipster     User                 @relation("TipsterSubscriptions", fields: [tipsterId], references: [id], onDelete: Cascade)
  
  @@unique([userId, tipsterId])
  @@index([userId])
  @@index([tipsterId])
}

model Review {
  id        String   @id @default(uuid())
  rating    Int      @default(5) // 1-5 stars
  comment   String?
  userId    String
  tipId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tip       Tip      @relation(fields: [tipId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([tipId])
}
